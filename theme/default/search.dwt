<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="{$keywords}" />
    <meta name="description" content="{$description}" />
    <meta name="generator" content="HbDataPHP v1.0" />
    <title>{$page_title}</title>
    <link href="theme/default/resources/css/style.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="theme/default/resources/js/jquery.min.js"></script>
    <script type="text/javascript" src="theme/default/resources/js/global.js"></script>
</head>
<body>
<div id="wrapper"> {include file="include/header.tpl"}
    <div class="wrap mb">
        <div id="pageLeft">
             {if $search_module eq 'product'} 
            {include file="include/product_tree.tpl"}
             {else} 
            {include file="include/article_tree.tpl"}
             {/if} 
        </div>
        <div id="pageIn"> {include file="include/ur_here.tpl"}
             {if $search_module eq 'product'} 
            <div class="productList">
                 {foreach from=$search_list name=product_list item=product} 
                <dl {if $smarty.foreach.product_list.last}  class="last" {/if} >
                <dt><a href="{$product.url}"><img src="{$product.thumb}" alt="{$product.name}" width="158" height="158" /></a></dt>
                <dd>
                    <p class="name"><a href="{$product.url}" title="{$product.name}">{$product.name}</a></p>
                    <p class="brief">{$product.description|truncate:50:"..."}</p>
                    <p class="price">{$lang.price}ï¼š{$product.price}</p>
                    <p><a href="{$product.url}" class="btn">{$lang.product_buy}</a></p>
                </dd>
                </dl>
                 {/foreach} 
                <div class="clear"></div>
            </div>
             {else} 
            <div id="articleList">
                 {foreach from=$search_list name=article_list item=article} 
                <dl {if $smarty.foreach.article_list.last}  class="last" {/if} >
                <div class="numDate"> <em>{$article.click}</em>
                    <p>{$article.add_time}</p>
                </div>
                <dt><a href="{$article.url}">{$article.title}</a></dt>
                <dd> {if $article.image} 
                    <p class="img"><img src="{$article.image}" height="42"></p>
                     {/if} 
                    <p class="desc">{$article.description|truncate:96:"..."}</p>
                </dd>
                </dl>
                 {/foreach} 
            </div>
             {/if} 
            {include file="include/pager.tpl"} </div>
        <div class="clear"></div>
    </div>
    {include file="include/online_service.tpl"}
    {include file="include/footer.tpl"} </div>
</body>
</html>